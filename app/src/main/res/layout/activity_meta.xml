<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="417dp"
        android:layout_height="561dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        tools:layout_editor_absoluteX="-7dp">

        <Button
            android:id="@+id/buttonSalvarMetaEditada"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/border"
            android:fontFamily="@font/ubuntu"
            android:text="@string/Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCategoria"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonExcluirMetaEditada"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/borderlaranja"
            android:fontFamily="@font/ubuntu"
            android:text="@string/Excluir"
            app:backgroundTint="@color/laranja"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCategoria"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editNomeDaMeta"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:hint="Digite um nome para esta meta"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNnm" />

        <EditText
            android:id="@+id/editAtualizarSaldo"
            android:layout_width="171dp"
            android:layout_height="35dp"
            android:fontFamily="@font/ubuntu"
            android:hint="R$000,00"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053" />

        <EditText
            android:id="@+id/editMetaInvestimento"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:hint="Qual é o valor em R$ que voce pretente atingir?"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInvestimento" />

        <EditText
            android:id="@+id/editPrazoMeta"

            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:hint="Quando você pretente atingir este objetivo? dd/mm/aaaa"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPrazoMeta" />

        <EditText
            android:id="@+id/editCategoria"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:hint="viagem, estudos, carro, casa ..."
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCatMeta" />

        <TextView
            android:id="@+id/editMetaPercent"
            android:layout_width="79dp"
            android:layout_height="42dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="000%"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editMetaIncentivo"
            android:layout_width="205dp"
            android:layout_height="32dp"
            android:layout_marginEnd="92dp"
            android:fontFamily="@font/ubuntu"
            android:visibility="invisible"
            android:text="Você está dando um grande passo para realizar seus sonhos!"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="80dp" />

        <TextView
            android:id="@+id/textNnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"

            android:fontFamily="@font/ubuntu"
            android:text="@string/NomeDaMeta"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMetaIncentivo" />

        <TextView
            android:id="@+id/textSaldoAtual"
            android:layout_width="104dp"
            android:layout_height="36dp"

            android:layout_marginTop="28dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/SaldoAtual"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textInvestimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/MetaInvestimento"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNomeDaMeta" />


        <TextView
            android:id="@+id/textPrazoMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu"
            android:hint="@string/Prazo"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMetaInvestimento" />

        <TextView
            android:id="@+id/textCatMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/Categoria"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPrazoMeta" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="418dp"
        android:layout_height="134dp"
        android:background="@android:color/holo_orange_light"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewNomeMetaAqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/Disponivel"
            android:textColor="@color/roxoEscuro"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnVoltarMain"
            android:layout_width="79dp"
            android:layout_height="76dp"
            android:layout_marginEnd="280dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032"
            app:srcCompat="@drawable/imagem2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="33dp"
            android:layout_height="42dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166"
            app:srcCompat="@drawable/people" />

        <TextView
            android:id="@+id/txtSaldoDisponivelParaMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/ubuntu"
            android:text="000"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>